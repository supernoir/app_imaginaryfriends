<div class="container">

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @title %></h3>
  </div>
  <div class="panel-body">

    <form action="/modify_character/<%= @this_character %>" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label for="inputfirstname">First Name</label>
        <input type="text" name="first_name" class="form-control" id="inputfirstname" value="<%= @current_firstname %>">
      </div>

      <div class="form-group">
        <label for="inputlastname">Last Name</label>
        <input type="text" name="last_name" class="form-control" id="inputlastname" value="<%= @current_lastname %>">
      </div>

      <div class="form-group">
        <label for="inputage">Birthday</label>
        <input type="text" name="age" class="form-control" id="inputage" value="<%= @current_age %>">
      </div>

      <div class="form-group">
        <label for="inputorigin">Origin</label>
        <input type="text" name="origin" class="form-control" id="inputorigin" value="<%= @current_origin %>">
      </div>


        <div class="form-group">
          <label for="characterimg">Choose a file</label>
          <input type="file" name="image" class="form-control" id="characterimg" placeholder="quidditch.jpg">
        </div>

    <br><br>
    <button type='submit' class='btn btn-primary'>Save Changes</button>
    </form>




  </div>
</div>
</div>
