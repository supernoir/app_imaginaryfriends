<div class="container">

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @title %></h3>
  </div>
  <div class="panel-body">

    <form action="/create_character" method="POST" enctype="multipart/form-data">

      <div class="form-group">
        <label for="inputfirstname">First Name</label>
        <input type="text" name="first_name" class="form-control" id="inputfirstname" placeholder="<%= @sample_first_name_male %>">
      </div>

      <div class="form-group">
        <label for="inputlastname">Last Name</label>
        <input type="text" name="last_name" class="form-control" id="inputlastname" placeholder="<%= @sample_last_name %>">
      </div>

      <div class="form-group">
        <label for="inputage">Birthday</label>
        <input type="text" name="age" class="form-control" id="inputage" placeholder="e.g. 31 July 1980">
      </div>

      <div class="form-group">
        <label for="inputorigin">Origin</label>
        <input type="text" name="origin" class="form-control" id="inputorigin" placeholder="e.g. Godric's Hollow">
      </div>


        <div class="form-group">
          <label for="characterimg">Choose a file</label>
          <input type="file" name="image" class="form-control" id="characterimg" placeholder="quidditch.jpg">
        </div>

    <br><br>
    <button type='submit' class='btn btn-primary'>Create New Character</button>
    </form>




  </div>
</div>
</div>
