<div class="container">

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Create new Character</h3>
  </div>
  <div class="panel-body">
<ul class="list-group">
    <form action="/create_character" method="POST" enctype="multipart/form-data">

      <li class="list-group-item"><div class="radio-inline">
        <label>
          <input type="radio" name="gender" id="female" value="female" checked>
          Female
        </label>
      </div>
      <div class="radio-inline">
        <label>
          <input type="radio" name="gender" id="male" value="male">Male
        </label>
      </div>
      <div class="radio-inline">
          <label>
            <input type="radio" name="gender" id="other" value="other">Other
          </label>
      </div></li>

      <li class="list-group-item"><div class="form-group">
        <label for="inputfirstname">First Name</label>
        <input type="text" name="first_name" class="form-control" id="inputfirstname" placeholder="<%= @sample_first_name_male %>">
      </div></li>

      <li class="list-group-item"><div class="form-group">
        <label for="inputlastname">Last Name</label>
        <input type="text" name="last_name" class="form-control" id="inputlastname" placeholder="<%= @sample_last_name %>">
      </div></li>

      <li class="list-group-item"><div class="form-group">
        <label for="inputage">Birthday</label>
        <input type="text" name="age" class="form-control" id="inputage" placeholder="e.g. 31 July 1980">
      </div></li>

      <li class="list-group-item"><div class="form-group">
        <label for="inputorigin">Origin</label>
        <input type="text" name="origin" class="form-control" id="inputorigin" placeholder="e.g. Godric's Hollow">
      </div></li>


        <li class="list-group-item"><div class="form-group">
          <label for="characterimg">Choose a file</label>
          <input type="file" name="image" class="form-control" id="characterimg" placeholder="quidditch.jpg">
        </div></li>

    <li class="list-group-item"><button type='submit' class='btn btn-primary'>Create New Character</button></li>
    </form>



</ul>
  </div>
</div>
</div>
